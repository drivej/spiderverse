{
  "name": "@drivej/spiderverse",
  "version": "1.0.1",
  "description": "VR Experience",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "vite build --config vite.config.build.ts && npm run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "cd test-app && npm run dev",
    "test:install": "cd test-app && npm install"
  },
  "peerDependencies": {
    "gsap": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": "^0.182.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "three": {
      "optional": false
    },
    "gsap": {
      "optional": false
    }
  },
  "dependencies": {
    "@drivej/xrworld": "github:drivej/xrworld",
    "easing-utils": "^1.0.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^18.0.0",
    "@types/three": "^0.148.1",
    "@vitejs/plugin-react": "^4.3.4",
    "gsap": "^3.12.5",
    "three": "^0.182.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.7"
  },
  "keywords": [
    "vr",
    "webxr",
    "three.js",
    "react",
    "spiderverse",
    "3d",
    "typescript"
  ],
  "author": "drivej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivej/spiderverse.git"
  }
}
